<!--Tables-->
<div class="container">
    <div class="row my-4">
        <div class="col-md-4">
            <div class="border bg-white p-3">
                <h4>Add Products</h4>
                <hr>
                <form action="/product" class="item" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="itemName" required>
                    </div>
                    <div class="form-group">
                        <label>Quantity</label>
                        <input type="number" class="form-control" name="itemQuantity" required>
                    </div>
                    <div class="">
                        <label>Category</label>
                        <select class="custom-select" name="itemCategory" required>
                            <option selected disabled value="">Choose...</option>
                            <option>Stationary</option>
                            <option>Grocery</option>
                            <option>Electronics</option>
                            <option>Clothes</option>
                            <option>Sports Equipment</option>
                        </select>
                    </div>
                    <br>
                    <input class="btn btn-success btn-block" type="submit" value="Add Product">
                </form>
            </div>
        </div>
        <div class="col-md-8">
            <table class="table bg-white">
                <thead class="" style="background-color: black;">
                <tr class="text-white">
                    <th scope="col">Product_ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Activity</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>1200</td>
                    <td>Pencils</td>
                    <td>Stationary</td>
                    <td>100</td>
                    <td>
                        <a class="btn btn-success btn-sm" href="">Edit</a>
                        <a class="btn btn-danger btn-sm" href="">Delete</a>
                    </td>
                </tr>
                <tr>
                    <td>1201</td>
                    <td>Pens</td>
                    <td>Stationary</td>
                    <td>50</td>
                    <td>
                        <a class="btn btn-success btn-sm" href="">Edit</a>
                        <a class="btn btn-danger btn-sm" href="">Delete</a>
                    </td>
                </tr>
                <tr>
                    <td>1202</td>
                    <td>Eraser</td>
                    <td>Stationary</td>
                    <td>25</td>
                    <td>
                        <a class="btn btn-success btn-sm" href="">Edit</a>
                        <a class="btn btn-danger btn-sm" href="">Delete</a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--End Tables-->


