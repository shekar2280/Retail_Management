                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!--EndNavbar-->

<!--Info Bulletin-->
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header text-white">Sub-Divisions</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="text-decoration-none text-dark" href="/staff">
                                <div class="card my-card text-center p-3">
                                    <h4>Staff <i class="fa-sharp fa-solid fa-users"></i></h4>
                                    <h3>2</h3>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a class="text-decoration-none text-dark" href="/product">
                                <div class="card my-card text-center p-3">
                                    <h4>Products <i class="fa-solid fa-box"></i></h4>
                                    <h3>10</h3>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a class="text-decoration-none text-dark" href="/order">
                                <div class="card my-card text-center p-3">
                                    <h4>Orders <i class="fa-solid fa-truck-fast"></i></h4>
                                    <h3>5</h3>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row my-4">
                <div class="col-md-6 mb-4">
                    <div class="bg-white p-3">
                        <canvas id="myChart1"></canvas>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="bg-white p-3">
                        <canvas id="myChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            const ctx1 = document.getElementById('myChart1').getContext('2d');
            const ctx2 = document.getElementById('myChart').getContext('2d');
        
            new Chart(ctx1, {
                type: 'pie',
                data: {
                    labels: ['Pencils', 'Bags', 'Writing Pad', 'Eraser', 'Ruler', 'Geometry Box'],
                    datasets: [{
                        label: 'Sales Statistics',
                        data: [30, 5, 8, 25, 10, 5],
                        backgroundColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)',
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        
            new Chart(ctx2, {
                type: 'bar',
                data: {
                    labels: ['Pencils', 'Bags', 'Writing Pad', 'Eraser', 'Ruler', 'Geometry Box'],
                    datasets: [{
                        label: 'Sales Statistics',
                        data: [30, 5, 8, 25, 10, 5],
                        backgroundColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        </script>
<!--End Graphs-->


</body>
</html>
